<div class="container-fluid border border-dark border-2 rounded-3 my-2 shadow" style="width: 45%;">
    <div class="d-flex flex-wrap row justify-content-between bg-info bg-gradient">
        <div class="col-12 text-center text-light fs-3">
            Sign Up
        </div>
    </div>
    <div class="d-flex flex-wrap justify-content-center row bg-info ">
        <div class="col-sm-12 text-start text-light border border-primary rounded-bottom my-2 fs-6 p-3 bg-info bg-gradient d-flex flex-wrap justify-content-center"
            style="width: 98%;">
            <div class="input-group my-3 " style="width: 98%;">
                <input id="username-signup" type="text" class="form-control bg-info text-light border-primary"
                    placeholder="Username" aria-label="Username">
            </div>
            <div class="input-group my-3 " style="width: 98%;">
                <input id="email-signup" type="text" class="form-control bg-info text-light border-primary"
                    placeholder="Email" aria-label="Email">
            </div>

            <div class="input-group mb-3" style="width: 98%;">
                <input id="password-signup" type="password" class="form-control bg-info text-light border-primary"
                    placeholder="Password" aria-label="Password">
            </div>

            <button id="signup" type="button"
                class="d-flex flex-wrap justify-content-center text-light col-12 btn btn-primary btn-lg border-primary my-2"
                style="width: 45%;">Sign
                Up</button>

            <div class="col-12 text-end text-light">
                <a href="/login" class="text-decoration-underline text-light ms-1">Login</a>
            </div>
        </div>
    </div>
</div>

<script src="/javascript/signup.js"></script>