<div id="loginForm" class="container-fluid border border-info border-3 rounded-3 my-2 shadow" style="width: 45%;">
    <div class="d-flex flex-wrap row justify-content-between bg-info bg-gradient">
        <div class="col-12 text-center text-light fs-3">
            Login
        </div>
    </div>
    <div class="d-flex flex-wrap justify-content-center row bg-info ">
        <div class="col-sm-12 text-start text-light border border-light rounded-bottom my-3 fs-6 p-3 bg-info bg-gradient d-flex flex-wrap justify-content-center"
            style="width: 98%;">
            <div class="input-group my-3 " style="width: 98%;">
                <input id="email-login" type="text" class="form-control bg-info text-light border-light"
                    placeholder="Email" aria-label="Email">
            </div>

            <div class="input-group mb-3" style="width: 98%;">
                <input id="password-login" type="password" class="form-control bg-info text-light border-light"
                    placeholder="Password" aria-label="Password">
            </div>

            <button id="submit" type="button"
                class="d-flex flex-wrap justify-content-center text-light col-12 btn btn-info btn-lg border-light my-2"
                style="width: 45%;">Login</button>

            <div class="col-12 text-end text-info">
                <a href="/signup" class="text-decoration-underline text-danger ms-1">Sign Up</a>
            </div>
        </div>
    </div>
</div>


